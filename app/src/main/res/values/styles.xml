<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headerImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/headerHeight</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="copyrightStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="headline">
        <item name="android:textSize">@dimen/headlineSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
    </style>

    <style name="weekday">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/padding_end</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>

    <style name="time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="functionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="functionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
